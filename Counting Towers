#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define bug() cout << "######PLEASE_NO_BUG######\n"
 
const int nxM = 107, M = 1e9 + 7, nxX = 1e6 + 7;
ll a[nxX], dp[nxX][3], n, m;
 
void solve() {
	dp[1][0] = dp[1][1] = 1;
	for(int i = 1; i <= nxX - 7; i++) {
		dp[i][0] %= M;
		dp[i][1] %= M;
		dp[i + 1][0] += 2 * dp[i][0];
		dp[i + 1][1] += dp[i][0];
		dp[i + 1][0] += dp[i][1];
		dp[i + 1][1] += 4 * dp[i][1];
	}
	int t;
	cin >> t;
	while(t--) {
		int n;
		cin >> n;
		cout << ((dp[n][0] % M) + (dp[n][1] % M)) % M << "\n";
	}
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	solve();
	return 0;
}

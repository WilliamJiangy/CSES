#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define bug() cout << "######PLEASE_NO_BUG######\n"
 
const int M = 1e9 + 7, nxM = 2e5 + 7;
vector<int> dp;
int n;
 
void solve() {
	cin >> n;
	for(int i = 0, a; i < n; i++) {
		cin >> a;
		int l = lower_bound(all(dp), a) - dp.begin();
		if(l < sz(dp)) dp[l] = a;
		else dp.pb(a);
	}
	cout << sz(dp) << "\n";
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	solve();
	return 0;
}

#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define bug() cout << "######PLEASE_NO_BUG######\n"
const int nxM = 5e3 + 7;
string n, m;
int dp[nxM][nxM];
 
void solve() {
	cin >> n >> m;
	for(int i = 1; i <= sz(n); i++) {
		dp[i][0] = i;
	}
	for(int j = 1; j <= sz(m); j++) {
		dp[0][j] = j;
	}
	for(int i = 1; i <= sz(n); i++) {
		for(int j = 1; j <= sz(m); j++) {
			dp[i][j] = 1e9 + 7;
			if(n[i - 1] == m[j - 1]) {
				dp[i][j] = dp[i - 1][j - 1];
			}
			else dp[i][j] = min({dp[i][j - 1], dp[i - 1][j - 1], dp[i - 1][j]}) + 1;
		}
	}
	cout << dp[sz(n)][sz(m)] << "\n";
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	solve();
	return 0;
}

#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define bug() cout << "######PLEASE_NO_BUG######\n"
 
const int nxM = 1e3 + 7, M = 1e9 + 7, nxX = 1e6 + 7;
int h[nxM], s[nxM], dp[nxX], x, n;
 
void solve() {
	cin >> n >> x;
	for(int i = 0; i < n; i++) {
		cin >> h[i];
	}
	for(int j = 0; j < n; j++) {
		cin >> s[j];
	}
	for(int i = 0; i < n; i++) {
		for(int j = x; j >= h[i]; j--) {
			dp[j] = max(dp[j], dp[j - h[i]] + s[i]);
		}
	}
	cout << dp[x] << "\n";
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	#ifndef ONLINE_JUDGE
	freopen("kext.inp", "r", stdin);
	#endif
	solve();
	return 0;
}

#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define bug() cout << "######PLEASE_NO_BUG######\n"
 
const int nxM = 107, M = 1e9 + 7, nxX = 1e5 + 7;
ll a[nxX], dp[nxX][nxM], n, m;
 
void solve() {
	cin >> n >> m;
	for(int i = 0; i < n; i++) {
		cin >> a[i];
		a[i]--;
	}
	for(int i = 0; i < n; i++) {
		if(i) {
			for(int j = 0; j < m; j++) {
				dp[i][j] = dp[i - 1][j];
				if(j) dp[i][j] += dp[i - 1][j - 1];
				if(j < m - 1) dp[i][j] += dp[i - 1][j + 1];
				dp[i][j] %= M;
			}
		}
		else {
			for(int j = 0; j < m; j++) dp[0][j] = 1;
		}
		if(~a[i]) {
			for(int j = 0; j < m; j++) {
				if(j ^ a[i]) {
					dp[i][j] = 0;
				}
			}
		}
	}
	ll ans = 0;
	for(int i = 0; i < m; i++) {
		ans += dp[n - 1][i];
		ans %= M;
	}
	cout << ans << "\n";
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	#ifndef ONLINE_JUDGE
	freopen("kext.inp", "r", stdin);
	#endif
	solve();
	return 0;
}

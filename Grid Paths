#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define bug() cout << "######PLEASE_NO_BUG######\n"
 
const int nxM = 1e3 + 7, M = 1e9 + 7, nxX = 1e6 + 7, dx[] = {1, 0}, dy[] = {0, 1};
char a[nxM][nxM];
ll dp[nxM][nxM], n;
 
void solve() {
	cin >> n;
	for(int i = 0; i < n; i++) {
		for(int j = 0; j < n; j++) {
			cin >> a[i][j];
		}
	}
	dp[0][0] = 1;
	for(int i = 0; i < n; i++) {
		for(int j = 0; j < n; j++) {
			if(i) dp[i][j] = (dp[i][j] + dp[i - 1][j]) % M;
			if(j) dp[i][j] = (dp[i][j] + dp[i][j - 1]) % M;
			if(a[i][j] == '*') dp[i][j] = 0;
		}
	}
	cout << dp[n - 1][n - 1] << "\n";
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	#ifndef ONLINE_JUDGE
	freopen("kext.inp", "r", stdin);
	#endif
	solve();
	return 0;
}

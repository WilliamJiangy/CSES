#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define ar array
#define bug() cout << "######PLEASE_NO_BUG######\n"
 
const int nxM = 5e3 + 7;
ll a[nxM], dp[nxM][nxM];
int n;
 
void solve() {
	cin >> n;
	ll s = 0;
	for(int i = 0; i < n; i++) {
		cin >> a[i];
		s += a[i];
	}
	for(int i = n - 1; i >= 0; i--) {
		for(int j = i; j < n; j++) {
			if(i == j) dp[i][j] = a[i];
			else {
				dp[i][j] = max(a[i] - dp[i + 1][j], a[j] - dp[i][j - 1]);	
			}
		}
	}
	cout << (s + dp[0][n - 1]) / 2 << "\n";
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	solve();
	return 0;
}
